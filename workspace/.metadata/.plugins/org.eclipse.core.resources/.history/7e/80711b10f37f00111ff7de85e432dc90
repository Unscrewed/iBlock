package me.Unscrewed.iBlock;

import org.bukkit.ChatColor;
import org.bukkit.entity.Player;
import org.bukkit.event.EventHandler;
import org.bukkit.event.Listener;
import org.bukkit.event.block.BlockPlaceEvent;

public class iBlockListenerPlace implements Listener{
	public iBlockListenerPlace() {	
	}
	@EventHandler
	public void onBlockPlace(BlockPlaceEvent event) {
		Player player = event.getPlayer();
		if(!hasPermissionUse(player, "iBlock.use") && iBlock.deniedBlocksPlace.contains(event.getBlock().getTypeId())){
			event.setCancelled(true);
			player.sendMessage(ChatColor.GREEN + "[iBlock] " + ChatColor.RED + "You're not allowed to place this block.");
			}else if(iBlock.deniedBlocksPlace.contains(event.getBlock().getTypeId())){
				event.setCancelled(false);
				//Ignore this player -- do not block banned placable blocks.
			}else if(!hasPermissionUse(player, "iBlock.use") && iBlock.deniedBlocksBreak.contains(event.getBlock().getTypeId())){
				event.setCancelled(true);
				player.sendMessage(ChatColor.GREEN + "[iBlock] " + ChatColor.RED + "You're not allowed to place this block.");
			}else if(iBlock.deniedBlocksBreak.contains(event.getBlock().getTypeId())){
				event.setCancelled(false);
				//Ignore this player -- do not block banned breakable blocks.
		}
	}
	public boolean hasPermissionUse(Player player, String string) {
		return player.isOp() || player.hasPermission("iBlock.use");
	}
}